
<div class="ui comments">
  {{#each tweets}}
    <div class="comment">
      <a class="avatar">
        <img src="images/Twitter-icon.png">
      </a>
      <div class="content">
        <a class="author">{{user.firstName}} {{user.lastName}}</a>
        <div class="metadata">
          <span class="date">Today at 5:42PM</span>
        </div>
        <div class="text">
          {{message}}
        </div>
      </div>
    </div>
  {{/each}}
</div>
